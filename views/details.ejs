<!doctype html>
<html lang="en">
  <%- include("./partials/head.ejs") %>
  <body class="flex flex-dir-col">
    <%- include("./partials/header.ejs") %>

    <div class="app-container flex">
      <%- include("./partials/navbar.ejs") %>
      <div class="pad2 w100 h100">
        <div>
          <span class="font-sx1 playfair-display-400 underline">Files:</span>
        </div>
        <div
          class="flex flex-just-cont-center flex-al-it-center flex-dir-col gap05"
        >
          <span class="font-sx1"><%= file.title %></span>
          <span>Path : <%= file.path %></span>
          <span>Created at : <%= file.createdAt %></span>
          <span>Owner : <%= file.ownerId %></span>
          <span>Size: <%= file.size /1000 %> Ko</span>

          <% if (isOwner) { %>
            <a href="/folders/<%=folder.title%>/<%= file.title %>/delete"
              ><button>Delete file</button></a
            >
          <% } %>

          

          <a href="<%=file.path%>" download>Download</a>
        </div>
      </div>
    </div>
  </body>
</html>
