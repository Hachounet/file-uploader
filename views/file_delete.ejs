<!doctype html>
<html lang="en">
  <%- include("./partials/head.ejs") %>
  <body class="flex flex-dir-col">
    <%- include("./partials/header.ejs") %>

    <div class="app-container flex flex-al-it-center flex-just-cont-center gap1 flex-dir-col">
        <p>Do you want to really delete this file ? </p>
      <form class="flex flex-dir-col flex-just-cont-center flex-al-it-center gap05" action="/folders/<%=folder%>/<%=file.title%>/delete" method="POST">
        <input type="hidden" name="fileId" value="<%= file.id %>" />
        <button type="submit">Delete file</button>
        
      </form>
     
      <% if (errors && errors.length) { %>
        <ul>
          <% errors.forEach((error) => { %>
            <li><%= error.msg %></li>
          <% }) %>
        </ul>
      <% } %>
    </div>
  </body>
</html>
