<!doctype html>
<html lang="en">
  <%- include("./partials/head.ejs") %>
  <body class="flex flex-dir-col">
    <%- include("./partials/header.ejs") %>

    <div class="app-container flex flex-al-it-center flex-just-cont-center gap1 flex-dir-col">
      <form class="flex flex-dir-col flex-just-cont-center flex-al-it-center gap05" action="/folders/<%=folder.title%>/edit" method="POST">
        <label for="folderName">Folder name:</label>
        <input type="text" name="folderName" value="<%= folder.title %>" required />
        <input type="hidden" name="folderId" value="<%= folder.id %>" />
        <button type="submit">Update folder</button>
      </form>
      <% if (errors && errors.length) { %>
        <ul>
          <% errors.forEach((error) => { %>
            <li><%= error.msg %></li>
          <% }) %>
        </ul>
      <% } %>
    </div>
  </body>
</html>
