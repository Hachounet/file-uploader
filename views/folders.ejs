<!doctype html>
<html lang="en">
  <%- include("./partials/head.ejs") %>
  <body class="flex flex-dir-col">
    <%- include("./partials/header.ejs") %>

    <div class="app-container flex">
      <%- include("./partials/navbar.ejs") %>
      <div class="pad2 w100 h100">
        <div>
          <span class="font-sx1 playfair-display-400 underline"><%= title %></span>
        </div>
        <div
          class="grid gridr4 gridc8 files-container grid-al-it-center grid-just-cont-center"
        >

        <% folders.forEach((folder) => { %>
            <div class="file-card flex flex-dir-col flex-just-cont-center flex-al-it-center">
                <span class="underline"><%= folder.title %></span>
                <span> <%= folder._count.Files %> files</span>
                <a href="/folders/<%=folder.title%>"><button >See more</button></a>

            
            </div>
      <%  }) %>



       

         
        </div>
      </div>
    </div>
  </body>
</html>
