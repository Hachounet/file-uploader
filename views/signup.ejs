<!doctype html>
<html lang="en">
  <%- include("./partials/head.ejs") %>

  <body class="flex flex-dir-col">
    <%- include("./partials/header.ejs")%>

    <div
      class="app-container flex flex-al-it-center flex-just-cont-center gap1"
    >
      <form
        class="flex flex-dir-col flex-just-cont-center flex-al-it-center gap05"
        action="/signup"
        method="POST"
      >
        <label for="email">Email:</label>
        <input type="email" name="email" />
        <label for="pseudo">Pseudo:</label>
        <input type="text" name="pseudo" />
        <label for="pw">Password</label>
        <input type="password" name="pw" />
        <button type="submit">Sign up</button>
      </form>
      <% if (errors.length) { %>
        <ul>
            <% errors.forEach((error) => { %>
            <li><%= error.msg %></li>
            <% }) %>
        </ul>
   <% } %>
    </div>
  </body>
</html>
