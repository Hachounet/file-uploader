<!doctype html>
<html lang="en">
  <%- include("./partials/head.ejs") %>
  <body class="flex flex-dir-col">
    <%- include("./partials/header.ejs") %>

    <div class="app-container flex">
      <%- include("./partials/navbar.ejs") %>
      <div class="pad2 w100 h100">
        <div>
          <span class="font-sx1 playfair-display-400 underline"
            ><%= title %>:</span
          >
          <form action="/upload" method="POST" enctype="multipart/form-data" class="flex flex-dir-col flex-al-it-center flex-just-cont-center gap05 font-sx1 playfair-display-400">
            <label for="file">Choose a file to upload :</label>
            <input type="file" name="file" />
            <label for="folderName">Choose a folder to save inside:</label>
            <select name="folderName" >
              <% folders.forEach((folder) => { %>
                <option value="<%=folder.id%>"><%=folder.title%></option>
              <% }) %>
            </select>
            <button type="submit">Upload</button>
          </form>
          <% if (errors.length) { %>
            <ul>
                <% errors.forEach((error) => { %>
                <li><%= error.msg %></li>
                <% }) %>
            </ul>
       <% } %>
        </div>
      </div>
    </div>
  </body>
</html>
